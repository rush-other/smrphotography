<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
        <link href="/stylesheets/default.css?<%=css_time_stamp%>" type="text/css" rel="stylesheet"></link>
        <%= javascript_include_tag 'application' %>
		<title>
			Shannon M Rush Photography - Login
    	</title>
	</head>
	<body>
	   <center>
	       <br/>
	       <br/>
	       <br/>
	       <% if not flash[:messages].blank? %>
	           <div class="messages">
	               <center>
                        <ul>
                            <% flash[:messages].each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </center>
                </div>
	       <% end %>
	       <form action="do_login.html" method="post">
    	       <table class="form_table">
    	           <tr>
    	               <td class="label">
    	                   Username:
                       </td>
                       <td class="value">
                           <input type="text" name="username"/>
                       </td>
                   </tr>
                   <tr>
                        <td class="label">
    	                   Password:
                       </td>
                       <td class="value">
                           <input type="password" name="password"/>
                       </td>
                   </tr>
                   <tr>
                        <td class="label" colspan="2">
                            <input type="submit" value="Submit" />
                        </td>
                   </tr>
               </table>
           </form>
	   </center>
    </body>
</html>